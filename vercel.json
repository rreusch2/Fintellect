{
  "version": 2,
  "builds": [
    {
      "src": "dist/index.js",
      "use": "@vercel/node@3",
      "config": {
        "runtime": "nodejs22.x"
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/public"
      }
    }
  ],
  "routes": [
    {
      "src": "^/assets/(.*)",
      "dest": "/dist/public/assets/$1",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "^/api/(.*)",
      "dest": "/dist/index.js"
    },
    {
      "src": "^/favicon.ico",
      "dest": "/dist/public/favicon.ico"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "^/.*",
      "dest": "/dist/public/index.html",
      "headers": {
        "cache-control": "public, max-age=0, must-revalidate"
      }
    }
  ]
} 